---
import AwePlayerSvelte from '../examples/AwePlayerSvelte.svelte';
---

<html lang='en'>
	<head>
		<meta charset='utf-8' />
		<link rel='icon' type='image/svg+xml' href='/favicon.svg' />
		<meta name='viewport' content='width=device-width' />
		<meta name='generator' content={Astro.generator} />
		<title>AwePlayer Astro Example</title>
	</head>
	<body>
		<div class='mb-10 text-center text-black'>
			<div
				class='mx-auto mt-4 w-fit rounded-full bg-blue-500/20 px-4 py-1 text-blue-500'
			>
				Version - Alpha
			</div>
			<h1 class='p-4 text-2xl'>
				AwePlayer with <span class='text-orange-500'>Astro</span>
			</h1>
			<p class='text-zinc-400'>Example @svelte</p>
		</div>
		<AwePlayerSvelte client:load />
	</body>
</html>

<style>
	body {
		background-size: 40px 40px;
		background-image: linear-gradient(
				to right,
				rgba(128, 128, 128, 0.1) 1px,
				transparent 1px
			),
			linear-gradient(to bottom, rgba(128, 128, 128, 0.1) 1px, transparent 1px);
	}
</style>
